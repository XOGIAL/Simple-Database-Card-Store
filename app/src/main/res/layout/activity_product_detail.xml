<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_product_name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Product Name"
        android:textSize="50dp"
        />

    <TextView
        android:id="@+id/tv_product_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Product min player"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tv_product_max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Product max player"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tv_product_price_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Price"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/tv_wallet_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Wallet"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/btn_buy"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/buy_product"
        />


</LinearLayout>